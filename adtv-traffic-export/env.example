# ADTV Traffic Module Environment Variables

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/your_database_name

# AI Services (Required for caption generation)
GEMINI_API_KEY=your_gemini_api_key_here

# Cloudinary Configuration (Highly Recommended for video processing)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Application Settings
APP_ENV=development
SECRET_KEY=your-secret-key-here
UPLOAD_MAX_SIZE_MB=500

# Optional: External Services
REDIS_URL=redis://localhost:6379  # For background tasks (optional)

# Optional: CORS Settings
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Optional: File Storage
UPLOAD_DIR=/path/to/uploads  # Defaults to ./uploads

# Optional: Performance Tuning
VIDEO_PROCESSOR_TIMEOUT=300  # seconds
MAX_CONCURRENT_UPLOADS=3
ENRICHER_MAX_CONCURRENT=4  # For contact enricher if integrated 